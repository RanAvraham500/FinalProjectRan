<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardElevation="30dp"
        app:cardBackgroundColor="@color/teal_200">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgCar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_car"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/tvCarNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מכונית 1"
                android:textSize="30sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@id/etCarModel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgCar"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/etCarModel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="דגם מכונית"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvCarNum"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgCar"
                app:layout_constraintBottom_toTopOf="@id/etCarMileage" />

            <EditText
                android:id="@+id/etCarMileage"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="קילומטראז"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/etCarModel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgCar"
                app:layout_constraintBottom_toTopOf="@id/etCarInsurance" />

            <EditText
                android:id="@+id/etCarInsurance"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="תאריך פקיעת ביטוח"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/etCarMileage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgCar"
                app:layout_constraintBottom_toBottomOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>